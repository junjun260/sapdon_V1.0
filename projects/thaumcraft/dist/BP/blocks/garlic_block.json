{
  "format_version": "1.12.30",
  "minecraft:block": {
    "description": {
      "identifier": "vampirism:garlic_block",
      "menu_category": {
        "category": "construction"
      },
      "states": {
        "sapdon:block_variant_tag": {
          "values": {
            "min": 0,
            "max": 3
          }
        }
      }
    },
    "components": {
      "minecraft:geometry": "geometry.crop",
      "minecraft:collision_box": {
        "origin": [
          0,
          0,
          0
        ],
        "size": [
          0,
          0,
          0
        ]
      },
      "minecraft:light_dampening": 0,
      "minecraft:placement_filter": {
        "conditions": [
          {
            "allowed_faces": [
              "up"
            ],
            "block_filter": [
              "minecraft:farmland"
            ]
          }
        ]
      },
      "minecraft:random_ticking": {
        "on_tick": {
          "event": "sapdon:test",
          "target": "self",
          "condition": "q.block_state('sapdon:block_variant_tag') <3"
        }
      },
      "minecraft:on_interact": {
        "event": "sapdon:fertilize",
        "target": "self",
        "condition": "q.is_item_name_any('slot.weapon.mainhand', 'minecraft:bone_meal')"
      }
    },
    "events": {
      "sapdon:test": {
        "set_block_state": {
          "sapdon:block_variant_tag": "q.block_state('sapdon:block_variant_tag') + 1"
        }
      },
      "sapdon:fertilize": {
        "sequence": [
          {
            "condition": "q.block_state('sapdon:block_variant_tag') <3",
            "set_block_state": {
              "sapdon:block_variant_tag": "q.block_state('sapdon:block_variant_tag') + Math.random(1,3- q.block_state('sapdon:block_variant_tag'))"
            }
          },
          {
            "decrement_stack": {}
          },
          {
            "run_command": {
              "command": [
                "particle minecraft:crop_growth_emitter ~~~",
                "playsound item.bone_meal.use @a ~~~",
                "say run"
              ]
            }
          }
        ]
      }
    },
    "permutations": [
      {
        "condition": "q.block_state('sapdon:block_variant_tag') == 0",
        "components": {
          "minecraft:material_instances": {
            "*": {
              "texture": "garlic_stage_0",
              "render_method": "alpha_test",
              "face_dimming": false,
              "ambient_occlusion": false
            }
          }
        }
      },
      {
        "condition": "q.block_state('sapdon:block_variant_tag') == 1",
        "components": {
          "minecraft:material_instances": {
            "*": {
              "texture": "garlic_stage_1",
              "render_method": "alpha_test",
              "face_dimming": false,
              "ambient_occlusion": false
            }
          }
        }
      },
      {
        "condition": "q.block_state('sapdon:block_variant_tag') == 2",
        "components": {
          "minecraft:material_instances": {
            "*": {
              "texture": "garlic_stage_2",
              "render_method": "alpha_test",
              "face_dimming": false,
              "ambient_occlusion": false
            }
          }
        }
      },
      {
        "condition": "q.block_state('sapdon:block_variant_tag') == 3",
        "components": {
          "minecraft:material_instances": {
            "*": {
              "texture": "garlic_stage_3",
              "render_method": "alpha_test",
              "face_dimming": false,
              "ambient_occlusion": false
            }
          }
        }
      }
    ]
  }
}